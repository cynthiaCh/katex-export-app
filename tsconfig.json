{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,

    "allowJs": true,               // 允许 JS 与 TS 共存，便于渐进迁移
    "checkJs": false,              // 如果想让 JS 也做类型检查，改成 true
    "resolveJsonModule": true,     // 允许直接 import JSON
    "types": ["vite/client", "node"]
  },
  "include": ["src", "env.d.ts"]
}
